pkgname=magescan
pkgver=v1.12.8.1.g080de7b
pkgrel=1
pkgdesc='Scan a Magento site for information.'
arch=('any')
url='https://github.com/steverobbins/magescan'
license=('custom')
depends=('php')
makedepends=('git' 'composer')
source=("git+https://github.com/steverobbins/magescan.git")
sha512sums=('SKIP')
options=('!strip')

pkgver() {
  cd $pkgname
  git describe --tags | sed "s/-/./g"
}

package() {
  cd $srcdir/magescan
  composer install
  install -dm755 ${pkgdir}/usr/lib/magescan
  install -dm755 ${pkgdir}/usr/bin
  cp -r ${srcdir}/magescan/bin $pkgdir/usr/lib/magescan
  cp -r ${srcdir}/magescan/src $pkgdir/usr/lib/magescan
  cp -r ${srcdir}/magescan/vendor $pkgdir/usr/lib/magescan
  ln -s /usr/lib/magescan/bin/magescan $pkgdir/usr/bin/magescan
}
