pkgname=smbmap
pkgver=v1.8.2.22.g9a40a69
pkgrel=1
pkgdesc='A pentest tool to map SMB shares'
arch=('any')
url='https://github.com/ShawnDEvans/smbmap'
license=('GPL')
depends=('impacket')
source=("$pkgname"::"git+${url}.git")
md5sums=('SKIP')

pkgver() {
  cd $pkgname
  git describe --tags | sed "s/-/./g"
}

package() {
  cd $pkgname
  install -Dm755 -t $pkgdir/usr/bin/ smbmap.py
}
