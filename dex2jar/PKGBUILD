pkgname=dex2jar
pkgver=2.0
pkgrel=1
pkgdesc="Tools to work with android .dex and java .class files"
arch=("x86_64")
url="https://github.com/pxb1988/dex2jar"
license=("Apache")
depends=('java-runtime')
source=("http://sourceforge.net/projects/dex2jar/files/${pkgname}-${pkgver}.zip")
md5sums=("SKIP")

package() {
  install -d "${pkgdir}/usr/lib/${pkgname}/lib"
  install -d "${pkgdir}/usr/bin/"

  cd "${srcdir}/${pkgname}-${pkgver}"

  install -m 755 *.sh "${pkgdir}/usr/lib/${pkgname}/" 
  install -m 644 lib/* "${pkgdir}/usr/lib/${pkgname}/lib/" 

  ln -s /usr/lib/dex2jar/d2j-dex2jar.sh "${pkgdir}/usr/bin/dex2jar"
}
