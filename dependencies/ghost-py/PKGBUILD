pkgname=ghost-py
pkgver=2.0.0.dev.2.gd0f6c9a
pkgrel=1
pkgdesc='Webkit based webclient (relies on PyQT)'
arch=('any')
url='https://github.com/jeanphix/Ghost.py'
license=('MIT')
depends=('python2' 'python2-pyqt5')
makedepends+=('git' 'python2-setuptools')
source=('git+https://github.com/jeanphix/Ghost.py.git')
md5sums=('SKIP')

pkgver() {
  cd "Ghost.py"
  git describe --tags | sed "s/-/./g"
}

package() {
  cd "Ghost.py"
  python2 setup.py install --root="$pkgdir" --optimize=1
}
